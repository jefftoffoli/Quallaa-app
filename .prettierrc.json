{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 180,
    "tabWidth": 4,
    "useTabs": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 80,
                "proseWrap": "always"
            }
        }
    ]
}
